             "calories": {
              "type": "number",
              "description": "categories amount in product"
            
            },
             "category": {
              "type": "string",
              "description": "name of category"
            
            },
            "title": {
              "type": "string",
              "description": "title of product"
      
            }
            
          }
        }
        
        
